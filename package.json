{
  "name": "webrtc-node-server",
  "version": "1.0.0",
  "description": "A Node.js PeerJS peer implementation using node-webrtc",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test:webrtc": "ts-node scripts/webrtc-test.ts",
    "transfer": "node --experimental-specifier-resolution=node --experimental-modules dist/examples/file-transfer.js"
  },
  "keywords": [
    "webrtc",
    "peerjs",
    "typescript",
    "node"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/events": "^3.0.3",
    "@types/node": "^20.11.24",
    "@vitest/coverage-v8": "^1.3.1",
    "patch-package": "^8.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "dependencies": {
    "@roamhq/wrtc": "^0.8.0",
    "peerjs": "^1.5.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@roamhq/wrtc",
      "esbuild"
    ]
  }
}
